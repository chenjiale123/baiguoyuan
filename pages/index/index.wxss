/**index.wxss**/
Page{
    background-color: rgb(245, 245, 245);
}
.hidden {
  display: none !important;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: auto;
  min-height: 100%;
  background-color: rgb(245, 245, 245);
}

.login {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  background-color: rgb(255, 255, 255);
  padding: 24rpx 0 24rpx 0;
}

.vip-info {
  width: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: space-around;
}

.info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center; /* padding: 0 56rpx; */
  width: 33.3333%; /* flex-grow:1; */
}

.ia {
  border-right: 1px solid rgb(220, 220, 220);
  border-left: 1px solid rgb(220, 220, 220);
}

.info-detail {
  font-size: 28rpx;
  color: #37D260;
  display: flex;
  align-items: center;
}

.info-detail1 {
  font-size: 40rpx;
  margin-right: 9rpx;
}

.info-detail2 {
  font-size: 40rpx;
  margin-right: 9rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.menber-info {
  font-size: 24rpx;
  color: rgb(102, 102, 102);
  margin-top: 6rpx;
}

.vip-info-next-btn {
  width: 8rpx;
  height: 16rpx;
  margin-left: 8rpx;
  color: rgb(102, 102, 102);
}

.btnToLogin {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-size: 100% 100%;
  width: 726rpx;
  height: 340rpx;
  box-sizing: border-box;
  color: #fff;
}

.user-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 40rpx 0 0 50rpx;
  width: 90%;
}

.user-name {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-align: left;
  font-size: 34rpx;
  margin-left: 18rpx;
}

.level-box {
  display: flex;
}

.mem-privlg {
  display: flex;
  font-size: 24rpx;
  color: #fff;
  background: rgba(255, 255, 255, 0.2);
  margin-left: 23rpx;
  height: 38rpx;
  line-height: 38rpx;
  border-radius: 38rpx;
  width: 132rpx;
  text-align: center;
  justify-content: center;
  align-items: center;
}

.arr-right {
  width: 0;
  height: 0;
  border-top: 8rpx solid transparent;
  border-bottom: 8rpx solid transparent;
  border-left: 8rpx solid #fff;
  margin-left: 6rpx;
}

.member-rules {
  position: absolute;
  top: 62rpx;
  right: 56rpx;
  font-size: 24rpx;
  color: #fff;
  text-decoration: underline;
}

.start-travel {
  width: 290rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 100rpx;
  background-color: rgb(248, 178, 21);
  box-shadow: 0 4rpx 10 rgba(0, 0, 0, 0.5);
  margin: 0 0 40rpx 50rpx;
}

.member-code {
  position: absolute;
  top: 62rpx;
  right: 56rpx;
  width: 70rpx;
  height: 70rpx;
  margin: 0 0 40rpx 78rpx;
}

.prevent-screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000000;
  background-color: rgba(0, 0, 0, 0);
}

.gift {
  margin-left: 130rpx;
  width: 60rpx;
  height: 24rpx;
  font-size: 17rpx;
  line-height: 24rpx;
  text-align: center;
  color: white;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.orders {
  width: 100%;
  display: flex;
  margin-top: 24rpx;
  flex-direction: column;
  background-color: rgb(255, 255, 255);
}

.orderInfo {
  height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  color: rgb(51, 51, 51);
  font-size: 28rpx;
  border-bottom: 1px solid rgb(242, 242, 242);
}

.situation {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0rpx 24rpx 0rpx 24rpx;
}

.allOrder {
  color: #37D260;
  padding-right: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100%;
}

.sit-detail1 {
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  font-size: 24rpx;
  margin-top: 6rpx;
  margin-bottom: 30rpx;
}

.sit-detail2 {
  width: 120rpx;
  text-align: center;
  font-size: 24rpx;
  margin-top: 52rpx;
}

.sit-img1 {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
  margin-top: -12rpx;
}

.sit-img2 {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
  margin-top: 32rpx;
}

.dot {
  margin-top: 10rpx;
  position: relative;
  left: 55%;
  width: 36rpx;
  height: 36rpx;
  font-size: 20rpx;
  background-color: rgb(249, 83, 83);
  color: #fff;
  border-radius: 20rpx;
  line-height: 36rpx;
  text-align: center;
}

.other-tools {
  width: 100%;
  background-color: rgb(255, 255, 255);
  font-size: 28rpx;
  color: rgb(51, 51, 51);
  margin-top: 24rpx;
}

.tool {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx 0 24rpx;
  border-bottom: 1px solid rgb(242, 242, 242);
}
