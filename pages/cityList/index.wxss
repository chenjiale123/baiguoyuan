page {
    height: 100%;
}

.container {
    background: rgb(242, 242, 242);
    padding: 30rpx;
    align-items: flex-start;
    height: auto;
    min-height: 100%
}

.list-title {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-left: 20rpx;
}

.icon-location {
    width: 32rpx;
    height: 32rpx;
    margin-right: 4rpx;
}

text {
    color: rgb(136, 136, 136);
    font-size: 28rpx;
}

.city-list {
    margin-top: 15rpx;
}

.item {
    /*padding:16rpx 47rpx;*/
    background: #FFF;
    font-size: 30rpx;
    color: rgb(53, 53, 53);
    display: inline-block;
    border-radius: 10rpx;
    width: 190rpx;
    height: 70rpx;
    text-align: center;
    line-height: 70rpx
}

