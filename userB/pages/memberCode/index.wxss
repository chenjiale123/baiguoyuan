/* pages/user/memberCode/index.wxss */

Page {
  background-color: #37D260;
  display: flex;
  justify-content: center;
}

.contain {
  height: 96%;
  width: 95%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-radius: 20rpx;
  background-color: rgb(248, 248, 248);
}

.top {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #37D260;
  font-size: 32rpx;
  background-color: rgb(245, 245, 245);
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  border: 1px solid rgb(220, 220, 220);
}

.member-code {
  padding-top: 12rpx;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  margin-top: 0;
  align-items: center;
  justify-content: center;
}

.code {
  color: rgb(136, 136, 136);
  font-size: 30rpx;
  text-align: center;
  margin: 40rpx 0 15rpx 0;
}

canvas {
  width: 600rpx;
  min-width: 300px;
  height: 128rpx;
}

.icon-img1 {
  height: 30rpx;
  width: 36rpx;
  margin-right: 10rpx;
}

.fresh {
  margin: 20rpx 0;
  font-size: 26rpx;
  color: #878787;
  display: flex;
  align-items: center;
}

.icon-img2 {
  width: 100%;
  height: 620rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
