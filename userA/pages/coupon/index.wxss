page{min-height:100%;}
.container{background: rgb(242,242,242);height:auto;min-height:100%;border-bottom: 1rpx solid #f2f2f2;}
.scroll-disabled{position:fixed;top:0;width:100%;}
.hidden{display: none!important;}
.status-box{width:100%;display: flex;border-bottom:1rpx solid rgb(229,229,229);background: #FFF;}
.status{flex:1;padding:27rpx 0;text-align: center;font-size:28rpx;color: rgb(53,53,53)}
.active{color: #37D260;border-bottom: 6rpx solid #37D260}
.coupon-box{width:100%;}
.item{width:92%;height:196rpx;background-size: cover;background-repeat:no-repeat;margin:22rpx 4%;display: flex;color: #FFF;}
.item-lt{width:40%;display: flex;flex-direction: column;align-items: center;justify-content: center;}
.price,.discount{font-size:100rpx;font-weight:600;height:50px;margin-top:-20rpx;}
.yen{font-size:36rpx;margin:0 10rpx;}
.f-h2{font-size: 30rpx;margin-top:20rpx;}
.item-rt{position:relative;display: flex;flex-direction: column;justify-content: space-between;width:59%;padding:20rpx 10rpx 20rpx 15rpx;}
.f-h3{font-size:30rpx;color: rgb(53,53,53);overflow: hidden;white-space: nowrap;text-overflow:ellipsis;}
.f-h4{font-size: 26rpx;color: rgb(136,136,136);margin-top:5rpx;}
.expires{font-size:18rpx;color: rgb(136,136,136)}
.use-btn{position: absolute;right:30rpx;top:50%;transform:translateY(-50%);color: rgb(93,157,235);border:1px solid rgb(93,157,235);border-radius:40rpx;padding:12rpx 33.5rpx;font-size:26rpx;}
.color-blue{color: rgb(93,157,235);border:1px solid rgb(93,157,235)}
.color-orange{color: rgb(248, 138, 11);border:1px solid rgb(248,138,11)}

/*已使用/已过期的券样式*/
.coupon-used .yen,.coupon-expired .yen{margin-right: 10rpx;}
.coupon-used .icon-used,.coupon-expired .icon-expired{width:124rpx;height:124rpx;position: absolute;right: 30rpx;top:50%;transform: translateY(-50%)}

/*没有券的默认样式*/
.no-coupon{margin-top:68rpx;}
.icon-nocoupons{width:400rpx;height:400rpx;}
.no-coupon .f-h2{text-align: center;font-size:30rpx;color: rgb(51,51,51);margin-top:22rpx;}


