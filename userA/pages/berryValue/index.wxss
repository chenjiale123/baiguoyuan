/* berryValue index.wxss */
page {
    background-color: rgb(245, 245, 245);
}

.content {
    display: flex;
    flex-direction: column;
}

.berry {
    width: 100%;
    height: 200rpx;
    display: flex;
    flex-direction: column;
    background-size: 100% 100%;
    background-repeat: no-repeat;
    color: #fff;
}

.berry-1 {
	display: flex;
	align-items: center;
	justify-content: flex-end;
    margin: 12rpx 24rpx 0 0;
    font-size: 28rpx;
}

.berry-2 {
	margin-left: 90rpx; 
    text-align: center;
    font-size: 80rpx;
}

.berry-info {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
	align-items: center;
    padding: 20rpx 24rpx 16rpx;
    color: rgb(100, 100, 100);
    background-color: rgb(255, 255, 255);
    border-bottom: 1px solid rgb(242, 242, 242);
}

.info-1 {
    color: rgb(51, 51, 51);
    font-size: 32rpx;
    align-items: center;
}
.info-2 {
    margin: 14rpx 0 0 0;
    font-size: 24rpx;
    color: rgb(153, 153, 153);
}

.p-m1 {
    color: rgb(248, 138, 11);
}

.p-m2 {
    color: #37D260;
}

.no-berry {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.no-berry image {
    margin-top: 174rpx;
    width: 400rpx;
    height: 400rpx;
}

.no-berry text {
    font-size: 26rpx;
    color: rgb(102, 102, 102);
    margin-top: 18rpx;
    margin-bottom: 4rpx;
}

.toGetberry {
    font-size: 26rpx;
    color: rgb(87, 107, 149);
}
